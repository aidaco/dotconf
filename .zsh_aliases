# system
alias c='clear'
alias r='reset'

# interactive modes
alias mvi='mv -i'
alias cpi='cp -i'

# utility
alias x='atool -x'
alias s='du -h --max-depth=1' # file size

# tmuxtemplates
alias -g e='~/.config/tmuxtemplates/editor'

# Configuration quick access
alias -g .brc='~/.bashrc'
alias -g .vrc='~/.vimrc'
alias -g .zrc='~/.zshrc'
alias -g .al='~/.zsh_aliases'
alias -g .ipyrc='~/.ipython/profile_default/ipython_config.py'
alias -g .trc='~/.tmux.conf'

# ls
alias l='ls -CtF --group-directories-first'
alias ll='ls -ACtF --group-directories-first'
alias lll='ls -oLhFAt'
alias la='ls -CF --group-directories-first'
alias lla='ls -ACF --group-directories-first'
alias llla='ls -oLhFA'
alias l1='ls -1oLhFA'

# tree
alias t='tree -dL 3 -I "__*" -I ".*"'
alias tt='tree -dahFL 5'
alias ttt='tree -aFul'

# pacman
alias pk='sudo pacman'
alias pki='sudo pacman -S'
alias pkr='sudo pacman -Rs'
alias pks='sudo pacman -Ss'
alias pkq='sudo pacman -Q'
alias pkqm='sudo pacman -Qm'
alias pku='sudo pacman -U'
alias pkuu='sudo pacman -Syu'

# pipe tools
alias -g L='| less'
alias -g H='| head'
alias -g T='| tail'
alias -g N='| /dev/null'
alias -g G='| grep'
alias -g S='| sort'
alias -g C='| wc'
alias -g CL='| wc -l'
alias -g CW='| wc -w'
alias -g CC='| wc -c'

# dev
alias todo='grep "TODO"; grep "FIXME"'

# python
alias ipy='clear && ipython'
alias py='python'
alias pym='python -m'
alias pyi='python -m pip install'
alias pyu='python -m pip uninstall'

# git
alias gs='git status'
alias ga='git add'
alias gau='git add -u'
alias grm='git rm'
alias grmc='git rm --cached'

